<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MenuUser">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_photo"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/nama_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="#9E9E9E"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:onClick="maps"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_find"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_place"
                    android:tint="#9E9E9E"/>
                <TextView
                    android:layout_toRightOf="@+id/ic_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Find Mitra"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_navigate_next"
                    android:tint="#9E9E9E"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginBottom="14dp"
                android:background="#9E9E9E"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:onClick="order"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_order"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_order"
                    android:tint="#9E9E9E"/>
                <TextView
                    android:id="@+id/txt_order"
                    android:layout_toRightOf="@+id/ic_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Status Order"/>
                <ImageView
                    android:id="@+id/alert_order"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/txt_order"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/shape_photo"
                    android:layout_marginLeft="6dp"
                    android:backgroundTint="@color/colorPrimaryDark"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_navigate_next"
                    android:tint="#9E9E9E"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginBottom="14dp"
                android:background="#9E9E9E"/>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:onClick="chat"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_chat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chat"
                    android:tint="#9E9E9E"/>
                <TextView
                    android:layout_toRightOf="@+id/ic_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Chat"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_navigate_next"
                    android:tint="#9E9E9E"/>
            </RelativeLayout>
            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginBottom="14dp"
                android:background="#9E9E9E"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:onClick="akun"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_account"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_account_box"
                    android:tint="#9E9E9E"/>
                <TextView
                    android:layout_toRightOf="@id/ic_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Account"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_navigate_next"
                    android:tint="#9E9E9E"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginBottom="14dp"
                android:background="#9E9E9E"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:onClick="logout"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_logout"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_logout"
                    android:tint="#9E9E9E"/>
                <TextView
                    android:layout_toRightOf="@id/ic_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="Logout"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_navigate_next"
                    android:tint="#9E9E9E"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginBottom="14dp"
                android:background="#9E9E9E"/>
            <LinearLayout
                android:id="@+id/layout_mitra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="khusus mitra"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:onClick="order_masuk"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_apa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:text="Orderan masuk"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_navigate_next"
                        android:layout_alignParentRight="true"
                        android:tint="#9E9E9E"/>
                    <ImageView
                        android:id="@+id/alert_toko"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/txt_apa"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/shape_photo"
                        android:layout_marginLeft="6dp"
                        android:backgroundTint="@color/colorPrimaryDark"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="14dp"
                    android:background="#9E9E9E"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_buka_servis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:background="@drawable/shape_edit_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:onClick="buka_servis"
                android:text="Buka Servis"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>